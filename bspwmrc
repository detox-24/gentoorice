#! /bin/sh
# ~/.config/bspwm/bspwmrc

# Autostart
pgrep -x sxhkd > /dev/null || sxhkd &
picom --config ~/.config/picom/picom.conf &
~/.config/polybar/launch.sh &
feh --bg-scale ~/Pictures/wallpapers/dragonball.jpg &
xsetroot -cursor_name left_ptr &

# Monitors and Desktops (Dragon Ball saga names)
bspc monitor -d 壱 弐 参 四 五 六

# Window settings
bspc config border_width         3
bspc config window_gap           12
bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

# Dragon Ball Super Saiyan color scheme
bspc config normal_border_color   "#1c1c1c"
bspc config active_border_color   "#FF8C00"
bspc config focused_border_color  "#FFD700"
bspc config presel_feedback_color "#4169E1"

# Focus behavior
bspc config focus_follows_pointer true
bspc config pointer_follows_focus false

# Rules
bspc rule -a Gimp state=floating follow=on
bspc rule -a Firefox desktop='^2'
bspc rule -a mpv state=floating
bspc rule -a Sxiv state=floating
