# Terminal
super + Return
    st

# Launcher
super + d
    rofi -show drun

# Quit/reload bspwm
super + shift + {q,r}
    bspc {quit,wm -r}

# Close window
super + shift + c
    bspc node -c

# Focus/move windows
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# Switch desktops
super + {1-9}
    bspc desktop -f '^{1-9}'

# Move window to desktop
super + shift + {1-9}
    bspc node -d '^{1-9}'

# Toggle floating
super + shift + space
    bspc node -t ~floating

# Toggle fullscreen
super + f
    bspc node -t ~fullscreen
